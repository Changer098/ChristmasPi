<!doctype html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - ChristmasPi</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

    <!-- CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/paper-kit-2/dist/css/paper-kit.css" rel="stylesheet" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/lib/paper-kit-2/dist/demo/demo.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript">
        function setActivePage() {
            var active = "@ViewData["ActivePage"]";
            switch (active) {
                case "Home":
                    if ($('#li-nav-solid').hasClass('active'))
                        $('#li-nav-solid').removeClass('active');
                    if ($('#li-nav-animation').hasClass('active'))
                        $('#li-nav-animation').removeClass('active');
                    $('#li-nav-home').addClass('active');
                    break;
                case "Animation":
                    if ($('#li-nav-solid').hasClass('active'))
                        $('#li-nav-solid').removeClass('active');
                    if ($('#li-nav-home').hasClass('active'))
                        $('#li-nav-home').removeClass('active');
                    $('#li-nav-animation').addClass('active');
                    break;
                case "Solid":
                    if ($('#li-nav-animation').hasClass('active'))
                        $('#li-nav-animation').removeClass('active');
                    if ($('#li-nav-home').hasClass('active'))
                        $('#li-nav-home').removeClass('active');
                    $('#li-nav-solid').addClass('active');
                    break;
            }
        }
    </script>

</head>
<body onload="setActivePage()">

    <!--    navbar come here          -->
    <nav aria-label="Pages">
        <ul class="pagination justify-content-center">
            <li class="page-item" id="li-nav-solid"><a class="page-link" href="/solid/">Solid Color Mode</a></li>
            <li class="page-item" id="li-nav-home"><a class="page-link" href="/">Home</a></li>
            <li class="page-item" id="li-nav-animation"><a class="page-link" href="/animation/">Animation Mode</a></li>
        </ul>
    </nav>
    <!-- end navbar  -->

    <div class="wrapper">
        <!-- content come here     -->
        @RenderBody()

    </div>

    <!-- Modal Bodies come here -->

    <!--   end modal -->
</body>

<!-- Core JS Files -->
<script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
<!--<script src="./js/jquery-ui-1.12.1.custom.min.js" type="text/javascript"></script>-->
<script src="~/lib/paper-kit-2/dist/js/core/jquery-ui.min.js" type="text/javascript"></script>
<script src="~/lib/paper-kit-2/dist/js/core/popper.min.js" type="text/javascript"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>

<!-- Switches -->
<script src="~/lib/paper-kit-2/dist/js/plugins/bootstrap-switch.js" type="text/javascript"></script>

<!--  Plugins for Slider -->
<script src="~/lib/paper-kit-2/dist/js/plugins/nouislider.min.js" type="text/javascript"></script>

<!--  Plugins for DateTimePicker -->
<script src="~/lib/paper-kit-2/dist/js/plugins/moment.min.js" type="text/javascript"></script>
<script src="~/lib/paper-kit-2/dist/js/plugins/bootstrap-datepicker.js" type="text/javascript"></script>


<!--  Paper Kit Initialization snd functons -->
<script src="~/lib/paper-kit-2/dist/js/paper-kit.min.js" type="text/javascript"></script>
<script src="~/js/site.js" type="text/javascript"></script>
@RenderSection("Scripts", required: false)
</html>