@{
    ViewData["Title"] = "Setup";
    ViewData["SetupTitle"] = "Lights";
    ViewData["SetupStep"] = 2;
    ViewBag.ShowProgress = true;
    @model ChristmasPi.Models.SetupLightsModel;
}
@if (Model.HasError) {
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}
<form asp-action="SubmitHardware" asp-controller="Setup" onload="">
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Number of lights</span>
            </div>
            <input asp-for="lightcount" type="number" min="1" max="1000" value="1" />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">FPS</span>
            </div>
            <input asp-for="fps" type="number" min="1" max="90" value="1" />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Brightness</span>
                <span class="input-group-text" id="brightnessvalue">50</span>
            </div>
            <input asp-for="brightness" type="range" class="custom-range" id="brightness-slider" min="0" max="255" step="1" value="@Model.DefaultBrightness">
        </div>
        <button class="btn btn-primary btn-just-icon" type="button" data-toggle="collapse" data-target="#extra" aria-expanded="false" aria-controls="collapseExample">
            <i class="nc-icon nc-simple-add"></i>
        </button>
        <div class="collapse" id="extra">
            <div class="card card-body">
                <label>Invert</label>
                <input asp-for="invert" type="checkbox" />
            </div>
        </div>
        <br>
        <input type="submit" class="btn btn-primary" id="submitbtn" value="Submit" disabled="false" />
    </div>
</form>